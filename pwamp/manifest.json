{
  "name": "pwamp",
  "description": "A web audio player app",
  "lang": "en-US",
  "start_url": "./",
  "scope": "./",
  "theme_color": "#181c25",
  "background_color": "#181c25",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay"
  ],
  "icons": [
    {
      "src": "./favicon-96.png",
      "sizes": "96x96"
    },
    {
      "src": "./favicon-128.png",
      "sizes": "128x128"
    },
    {
      "src": "./favicon-256.png",
      "sizes": "256x256"
    },
    {
      "src": "./favicon-512.png",
      "sizes": "512x512"
    }
  ],
  "file_handlers": [
    {
      "action": "./",
      "accept": {
        "text/plain": [
          ".pwampskin"
        ]
      }
    },
    {
      "action": "./",
      "accept": {
        "audio/wav": [
          ".wav"
        ],
        "audio/mpeg": [
          ".mp3"
        ],
        "audio/mp4": [
          ".mp4"
        ],
        "audio/aac": [
          ".adts"
        ],
        "audio/ogg": [
          ".ogg"
        ],
        "audio/webm": [
          ".webm"
        ],
        "audio/flac": [
          ".flac"
        ]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+amp",
      "url": "./?addRemoteSong=%s"
    }
  ],
  "share_target": {
    "action": "./handle-shared-song",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "files": [
        {
          "name": "audioFile",
          "accept": [
            "audio/wav",
            "audio/mpeg",
            "audio/mp4",
            "audio/aac",
            "audio/ogg",
            "audio/webm",
            "audio/flac"
          ]
        }
      ]
    }
  }
}